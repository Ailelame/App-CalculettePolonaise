<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.dta.formtion.calculettepolonaise.MainActivity"
    android:orientation="vertical">


    <ListView
        android:id="@+id/listV"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="2"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:background="@color/darkGreen"/>

    <TextView
        android:id="@+id/currentInput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/dark"
        android:text=""
        android:textSize="25sp"
        android:visibility="visible"
        android:background="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:columnCount="4">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="1"
                    android:text="1" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="2"
                    android:text="2" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="3"
                    android:text="3" />

                <Button
                    android:id="@+id/buttonPlus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/ope"
                    android:textColor="@color/dark"
                    android:tag="+"
                    android:text="+" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="4"
                    android:text="4" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="5"
                    android:text="5" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="6"
                    android:text="6" />

                <Button
                    android:id="@+id/buttonMinus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/ope"
                    android:textColor="@color/dark"
                    android:tag="-"
                    android:text="-" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="7"
                    android:text="7" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="8"
                    android:text="8" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="9"
                    android:text="9" />

                <Button
                    android:id="@+id/buttonDivided"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/ope"
                    android:textColor="@color/dark"
                    android:tag="/"
                    android:text="/" />

                <Button
                    android:id="@+id/buttonRandom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/special"
                    android:tag="random"
                    android:text="Random" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/nombre"
                    android:textColor="@color/dark"
                    android:tag="0"
                    android:text="0" />

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/special"
                    android:tag="clear"
                    android:text="Clear" />

                <Button
                    android:id="@+id/buttonMulti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/ope"
                    android:textColor="@color/dark"
                    android:tag="*"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonPop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/special"
                    android:tag="pop"
                    android:text="Pop" />

                <Button
                    android:id="@+id/buttonSwap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/special"
                    android:tag="swap"
                    android:text="Swap" />

                <Button
                    android:id="@+id/buttonEnter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@color/colorAccent"
                    android:tag="enter"
                    android:text="Enter" />

            </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
